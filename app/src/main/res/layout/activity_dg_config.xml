<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UseSwitchCompatOrMaterialXml">

    <TextView
        android:id="@+id/text_tig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="时间以分钟为单位"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_read"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="阅读时间"
        app:layout_constraintBottom_toBottomOf="@id/edit_read"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_tig" />

    <EditText
        android:id="@+id/edit_read"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@id/text_read"
        app:layout_constraintRight_toLeftOf="@id/btn_save_read"
        app:layout_constraintTop_toTopOf="@id/text_read" />

    <Button
        android:id="@+id/btn_save_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_read" />


    <TextView
        android:id="@+id/text_video"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="视频时间"
        app:layout_constraintBottom_toBottomOf="@id/edit_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_read" />


    <EditText
        android:id="@+id/edit_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:singleLine="true"

        app:layout_constraintLeft_toRightOf="@id/text_video"
        app:layout_constraintRight_toLeftOf="@id/btn_save_video"
        app:layout_constraintTop_toTopOf="@id/text_video" />

    <Button
        android:id="@+id/btn_save_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_video" />


    <Switch
        android:id="@+id/sw_xin_wen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="新闻联播"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_save_video" />

    <EditText
        android:id="@+id/edit_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:background="#FAF0E6"
        android:hint="日志"
        android:minLines="3" />

</androidx.constraintlayout.widget.ConstraintLayout>